<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
<body>
    <h3>Edit your listing</h3>
    <form method="POST" 
        action="/listings/<%=listing._id%>?_method=PUT" 
        novalidate class="needs-validation" 
        enctype="multipart/form-data">
        <div class="mb-3">
            <label for="description" class="form-label"> Description</label>
            <input name="listing[title]" 
            class="form-control"  
            value="<%=listing.title%>"
             type="text" required>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" 
        class="form-control" required ><%=listing.description%></textarea>   
        </div>
       
        <div class="mb-3">
            Original Listing Image
          <img src = "<%=originalImageURL%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input name="listing[image]"  
            class="form-control" 
            type="file" 
            /> 

        </div>
        <div class="row">
       <div class="mb-3 cil-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]"  
        class="form-control" 
        value="<%=listing.price%>"
         type="number" required>

       </div></div>
       
       <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" 
        class="form-control" 
        value="<%=listing.country%>" 
        type="text" required>
       </div>

        
       <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" 
        class="form-control" 
        value="<%=listing.location%>" 
        type="text" required>
       </div>
     
       <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <input name="listing[category]" 
        class="form-control" 
        value="<%=listing.category%>" 
        type="text" required>
       </div>
        <button class="btn btn-dark edit-btn mt-3">add</button>
    </form>
</body>
</div></div>