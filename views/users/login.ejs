<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 text-center">Login to WanderLust</h1>
    <div class="col-6 offset-3">
        <% if (error.length > 0) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" class="form-control" type="text" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" class="form-control" type="password" required>
            </div>

            <button class="btn btn-success w-100" type="submit">Login</button>
        </form>
        
        <div class="mt-3 text-center">
            <p>New to WanderLust? <a href="/signup">Sign Up</a></p>
        </div>
    </div>
</div>
